<!-- *** TEMPLATE CHIFFRES CLES 1 / BANDEAU DROITE *** --> 

{{#features}}
	<li class="item scrollbar-hidden" style="width:270px;">
		<h3 class="title-feature ">{{nom}}</h3>

      	<!--Chiffre clé 1-->
      	<div class="row numberkey" style="height:auto;">
        	<div class="zone-iconnumber col-sm-4">
          		<div id="iconnumber1"></div>
          	</div>
	        <div class="col-sm-8" id="center">
			<!-- Affiche le nombre de hectares de superficie de la commune-->
				{{! Nombre affiché }}
	        	<div class="number-feature">
			  		{{! Valeur affichée }}
					{{#area_ha}}{{area_ha}} ha{{/area_ha}}
					{{! Si valeur NULL alors }}
					{{^area_ha}}Hectares{{/area_ha}}
				</div>
				{{! Titre sous le nombre affiché }}
	        	<div class="titlenumber-feature">
			  		{{! Valeur affichée }}
					{{#area_ha}}superficie de la commune{{/area_ha}}
					{{! Si valeur NULL alors }}
					{{^area_ha}}de superficie de la commune inconnu{{/area_ha}}
				</div>
	        </div>
      	</div>
      	<!--./Chiffre clé 1-->
		<!--Chiffre clé 2-->
		<div class="row numberkey" style="height:auto;">
        	<div class="zone-iconnumber col-sm-4">
          		<div id="iconnumber2"></div>
          	</div>
			<div class="col-sm-8">
			<!-- Affiche le nombre de hectares de superficie agricole utile de la commune-->
				{{! Nombre affiché }}
	        	<div class="number-feature">
			  		{{! Valeur affichée }}
			  		{{#sau10}}{{sau10}} ha{{/sau10}}
					{{! Si valeur NULL alors }}
					{{^sau10}}Hectares{{/sau10}}
				</div>
				{{! Titre sous le nombre affiché }}
	        	<div class="titlenumber-feature">
			  		{{! Valeur affichée }}
					{{#sau10}}de supercifie agricole utile{{/sau10}}
					{{! Si valeur NULL alors }}
					{{^sau10}}de supercifie agricole utile inconnu{{/sau10}}
				</div>
	        	<div class="subtitle-feature">
					{{! Précision en italique }}
					<i>Pour les sièges d'exploitations localisés sur la commune</i>
				</div>
	        </div>
      	</div>
		<!--./Chiffre clé 2-->
		<!--Chiffre clé 3-->
		<div class="row numberkey" style="height:auto;">
        	<div class="zone-iconnumber col-sm-4">
          		<div id="iconnumber3"></div>
          	</div>
			<div class="col-sm-8" id="center">
			<!-- Affiche le nombre d'exploitants de la commune-->
				{{! Nombre affiché }}
	        	<div class="number-feature">
			  		{{! Valeur affichée }}
					{{#expl10}}{{expl10}}{{/expl10}}
					{{! Si valeur NULL alors }}
					{{^expl10}}Nombre{{/expl10}}
				</div>
				{{! Titre sous le nombre affiché }}
	        	<div class="titlenumber-feature">
			  		{{! Valeur affichée }}
			  		{{#expl10}}exploitants sur la commune{{/expl10}}
					{{! Si valeur NULL alors }}
					{{^expl10}}d'exploitants sur la commune inconnu{{/expl10}}
				</div>
	        </div>
      	</div>
		<!--./Chiffre clé 3-->
	</li>
{{/features}}

<style>

	/*** Définir la couleur de mon template - Insérer le code #HEX de votre couleur */
	:root {
		--mycolor: #00936f;
	}

	/*** Définir les paramètres des chiffres clés*/

	/* Couleur - code HEX */ 
	.numberkey {
    	--mynumbercolor: #00936f; 
  	}

  	/** Définir les icônes des chiffres clés **/

	/* Icône 1 - Lien vers l'îcone */
	#iconnumber1{
	    -webkit-mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/superficie2.png);
	    mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/superficie2.png);
	 }
	#iconnumber2{
	    -webkit-mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/sau.png);
	    mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/sau.png);
	 }
	#iconnumber3{
	    -webkit-mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/exploitation.png);
	    mask-image: url(https://observatoire.parc-naturel-normandie-maine.fr/mviewer/dev/apps/agriculture/img/icone/exploitation.png);
	 }
	
	#center{
  		padding: 10px;
		margin-top: 5%;
	}
  	/***********************************************/
	/*** Ne pas toucher aux propriétés suivantes ***/

	/* Rendre les barres de défilement invisibles */
	.scrollbar-hidden::-webkit-scrollbar {
		display: none;
	}
	
	.scrollbar-hidden {
		-ms-overflow-style: none;
		scrollbar-width: none; /* Firefox */
	}

	/* Texte */

	.title-feature {
		color: #1D1B35;
	    font-family: 'roboto_bold', Arial, Sans-serif;
	    font-size: 18px;
	    margin-bottom: 7%;
	    line-height: 1.2;
	}
	.subtitle-feature {
		color: var(--mycolor);
		font-family:'roboto_regular', Arial, Sans-serif;
		font-size:12px;
		margin-top:7%;
		line-height:1;
	}

	/* Chiffres clés */

	.numberkey {
    	margin-top: 10px; 
    	height: 10px;   
  	}

	.zone-iconnumber{
		padding:20px;
	}

	#iconnumber1{
	    -webkit-mask-repeat: no-repeat;
	    mask-repeat: no-repeat;
	    height: 70px;
	    width: 70px;
	    background: var(--mynumbercolor);
	}
	#iconnumber2{
	    -webkit-mask-repeat: no-repeat;
	    mask-repeat: no-repeat;
	    height: 70px;
	    width: 70px;
	    background: var(--mynumbercolor);
	}
	#iconnumber3{
	    -webkit-mask-repeat: no-repeat;
	    mask-repeat: no-repeat;
	    height: 70px;
	    width: 70px;
	    background: var(--mynumbercolor);
	}

	.number-feature {
    	color: var(--mynumbercolor);
    	font-family:'roboto_bold';
    	font-size:30px;   
  	}

  	.titlenumber-feature {
    	color: var(--mynumbercolor);
    	font-family:'roboto_bold';
    	font-size:13px;
    	line-height:1;
 	}

	.subtitlenumber-feature{
		font-size:11px;
		color:#555;
	}
	
</style>