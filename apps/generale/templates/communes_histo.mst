{{! Ce qui est affiché dans le panneau d'information... }}
{{#features}}
	<li id="{{type}}" class="inventaire item scrollbar-hidden" style="width:270px;">
		<h3 class="title-feature">{{nom}}</h3> <!-- Titre du panneau d'information : nom du partenaire -->
		<p class="text-feature">    
		<span>
			Code INSEE : 
		</span>
		{{insee_com}}        
</p>		
		<table>
			<thead>
				<tr class="table-title"><th>      </th><th>Adhérant au Parc</th><th>Statut Parc</th></tr>
			</thead>
			<tbody>
					<tr><td class="table-title"><b>Charte 1975-1995</b></td>
						<td>		
							{{#parc1975}} <!-- Ce qu'il faut afficher si l'attribut choisi a une valeur -->
								Oui
							{{/parc1975}}
							{{^parc1975}} <!-- Ce qu'il faut afficher si l'attribut choisi a une valeur NULL -->
								Non	
							{{/parc1975}}
						</td>
						<td>		
							{{#parc1975}} <!-- Ce qu'il faut afficher si l'attribut choisi a une valeur -->
								{{statutparc1975}}
							{{/parc1975}}
							{{^parc1975}} <!-- Ce qu'il faut afficher si l'attribut choisi a une valeur NULL -->	
							/
							{{/parc1975}}
						</td>
			</tbody>
			<tbody>
					<tr><td class="table-title"><b>Charte 1996-2008</b></td>
						<td>		
							{{#parc1996}} <!-- Ce qu'il faut afficher si l'attribut choisi a une valeur -->
